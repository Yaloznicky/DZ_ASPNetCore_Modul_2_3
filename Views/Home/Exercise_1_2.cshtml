@model List<NoteModel>
@{
    ViewData["Title"] = "Заметки";
}
<h1>@ViewData["Title"]</h1>

<a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="NewNote" role="button">Новая заметка</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Название заметки</th>
            <th scope="col">Текст заметки</th>
            <th scope="col">Дата</th>
            <th scope="col">Теги</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for(int i=0; i<Model.Count; i++)
        {
            <tr>
                <th>@Model[i].title</th>
                <td>@Model[i].text</td>
                <td>@Model[i].date</td>
                <td>@Model[i].teg</td>
                <td class="d-grid gap-2 justify-content-end">
                    <form method="get">
                        <button class="btn btn-outline-primary btn-sm" type="submit" name="edit" value=@i asp-controller="Home" asp-action="EditNote">Изменить</button>
                        <button class="btn btn-outline-danger btn-sm" type="submit" name="delete" value=@i asp-controller="Home" asp-action="DeleteNote">Удалить</button>
                        <button class="btn btn-outline-info btn-sm" type="submit" name="save" value=@Model[i].ToString() asp-controller="Home" asp-action="Download">Скачать</button>
                    </form>
                </td>
            </tr>            
        }
    </tbody>
</table>
<form method="get">
    <button class="btn btn-outline-info btn-sm" type="submit" asp-controller="Home" asp-action="DownloadAll">Скачать все заметки</button>
</form>
